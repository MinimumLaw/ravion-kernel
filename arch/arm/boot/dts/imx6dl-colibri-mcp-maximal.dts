/dts-v1/;

#include "imx6dl-colibri-mcp.dtsi"

/ {
	model = "Toradex Colibri iMX6DL/S on Radioavionica MCP Board";
	compatible = "toradex,mcp", "toradex,colibri_imx6dl-eval",
		"toradex,colibri_imx6dl", "fsl,imx6dl";

	aliases {
		i2c0 = &i2c2;
		i2c1 = &i2c3;
	};

	aliases {
		rtc0 = &snvs_rtc;
	};

	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_leds>;

		w1 {
			label = "W1";
			gpios = <&gpio2 6 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		cif {
			label = "CIF_PWR";
			gpios = <&gpio3 18 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_keys>;

		power {
			label = "Power";
			gpios = <&gpio2 22 GPIO_ACTIVE_LOW>; /* SODIMM 45 */
			linux,code = <KEY_POWER>;
			debounce-interval = <100>;
			wakeup-source;
		};
	};

	gpio-poweroff {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_poweroff>;
		compatible = "gpio-poweroff";
		gpios = <&gpio2 3 GPIO_ACTIVE_LOW>;
	};

	lcd_display: display@di0 {
		interface-pix-fmt = "bgr666";
		status = "okay";

		port@0 {
			reg = <0>;

			lcd_display_in: endpoint {
				remote-endpoint = <&ipu1_di0_disp0>;
			};
		};

		port@1 {
			reg = <1>;

			lcd_display_out: endpoint {
				remote-endpoint = <&adv7123_in>; /* <&lcd_panel_in>; */
			};
		};
	};

	adv7123: encoder {
		compatible = "adi,adv7123";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_vga_encoder>;
		psave-gpios = <&gpio3 26 GPIO_ACTIVE_LOW>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;
			port@0 {
				reg = <0>;
				adv7123_in: endpiont@0 {
					remote-endpoint = <&lcd_display_out>;
				};
			};
			port@1 {
				reg = <1>;
				adv7123_out: endpoint@0 {
					remote-endpoint = <&vga_connector_in>;
				};
			};
		};
	};

	vga0: connector@0 {
		compatible = "vga-connector";
		label = "vga";

		/*ddc-i2c-bus = <&i2c3> */

		port {
			vga_connector_in: endpoint {
				remote-endpoint = <&adv7123_out>;
			};
		};
	};
};

&ipu1_di0_disp0 {	remote-endpoint = <&lcd_display_in>;	};

&hdmi {	status = "okay";	};

/* Colibri SSP */
&ecspi4 {
	status = "okay";

	spidev0: spi@0 {
		reg = <0>;
		spi-max-frequency = <1000000>;
		 /* not allowed compatible = "spidev", so set allowed */
		compatible = "ge,achc";
		status = "okay";
	};
};


/*
 * Colibri I2C: I2C3_SDA/SCL on SODIMM 194/196 (e.g. RTC on carrier board)
 */
&i2c3 {	status = "okay";	};

/* Colibri MMC */
&usdhc1 {	status = "okay";	};

&weim {		status = "disabled";	};

&iomuxc {
	pinctrl_gpio_leds: gpio-leds {
		fsl,pins = <
			MX6QDL_PAD_NANDF_D6__GPIO2_IO06	0x0f058 /* PU_22K */
			MX6QDL_PAD_EIM_D18__GPIO3_IO18	0x0f058 /* PU_22K soDimm 77: CIF_D11/CIF_PWR */
		>;
	};

	pinctrl_vga_encoder: vga-encoder {
		fsl,pins = <
			MX6QDL_PAD_EIM_D26__GPIO3_IO26	0x0f058 /* PU_22K soDimm 71: BL_ON */
		>;
	};

};
