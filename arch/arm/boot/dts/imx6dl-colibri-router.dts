/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include "imx6dl.dtsi"
#include "imx6qdl-colibri-ravion.dtsi"

/ {
	model = "Toradex Colibri iMX6DL/S on Radioavionica Router Board stack";
	compatible = "toradex,mcp", "toradex,colibri_imx6dl-eval",
		"toradex,colibri_imx6dl", "fsl,imx6dl";

	/*
	 * Device specific leds
	 */
	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_leds>;

		w1 {
			label = "W1";
			gpios = <&gpio2 6 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		nreset {
			label = "nRESET";
			gpios = <&gpio6 27 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		charge_red {
			label = "charge_red";
			gpios = <&gpio3 18 GPIO_ACTIVE_LOW>; /* soDimm77 - GPIO4 */
			default-state = "off";
		};

		charge_green {
			label = "charge_green";
			gpios = <&gpio2 10 GPIO_ACTIVE_LOW>; /* soDimm30 - GPIO5 */
			default-state = "off";
		};

		charge_blue {
			label = "charge_blue";
			gpios = <&gpio2 11 GPIO_ACTIVE_LOW>; /* soDimm100 - GPIO6 */
			default-state = "off";
		};

		status_red {
			label = "status_red";
			gpios = <&gpio2 4 GPIO_ACTIVE_LOW>; /* soDimm102 - GPIO7 */
			default-state = "off";
		};

		status_green {
			label = "status_green";
			gpios = <&gpio2 8 GPIO_ACTIVE_LOW>; /* soDimm104 - GPIO8 */
			default-state = "off";
		};

		status_blue {
			label = "status_blue";
			linux,default-trigger = "heartbeat";
			gpios = <&gpio2 1 GPIO_ACTIVE_LOW>; /* soDimm134 - GPIO9 */
			default-state = "on";
		};
	};

	/*
	 * Device specific keys
	 */
	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_keys>;

		power {
			label = "Power";
			gpios = <&gpio2 22 GPIO_ACTIVE_LOW>; /* SODIMM 45 */
			linux,code = <KEY_POWER>;
			debounce-interval = <100>;
			wakeup-source;
		};

		status {
			label = "Status";
			gpios = <&gpio1 11 GPIO_ACTIVE_LOW>; /* soDimm69 - GPIO3 */
			linux,code = <KEY_F1>;
			debounce-interval = <100>;
		};

		tangenta {
			label = "Tangenta";
			gpios = <&gpio1 8 GPIO_ACTIVE_LOW>; /* soDimm63 - GPIO2 */
			linux,code = <KEY_F2>;
			debounce-interval = <100>;
		};
	};

	/*
	 * PPS pin from SNS receiver
	 */
	pps {
		compatible = "pps-gpio";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_pps_gpio>;

		gpios = <&gpio1 7 GPIO_ACTIVE_HIGH>; /* soDimm 55 - GPIO1 board */
		assert-falling-edge;
		status = "okay";
	};
};

/*
 * Display subsystem
 */
&tft_display_bus {	status = "disabled"; };
&hdmi		 {	status = "okay"; };

/*
 * Colibri I2C: I2C3_SDA/SCL on SODIMM 194/196 (e.g. RTC on carrier board)
 */
&i2c3 {
	status = "okay";

	/* Composite video capture interface */
	cvbs: adv7280@20 {
		reg = <0x20>;
		compatible = "adv7280", "adi,adv7280";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_adv7280>;
		interrupt-parent = <&gpio3>;
		interrupts = <26 IRQ_TYPE_LEVEL_LOW>;
		powerdown-gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;
		input-names = "Ain1","Ain2","Ain3","Ain4";
		inputs = <0x00 0x01 0x02 0x03>;
		status = "okay";

		port {
			adv7280_ep: endpoint {
				remote-endpoint = <&ipu1_csi1_mux_from_parallel_sensor>;
				bus-width = <8>;
			};
		};
	};

	/* DS2484: I2C to OneWire Converter */
	owc: ds2482@18 {
		status = "okay";
		compatible = "ds2482";
		reg = <0x18>;
	};
};

&ipu1_csi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_ipu1_csi1>;

	fim {
		status = "okay";
	};
};

&ipu1_csi1_from_ipu1_csi1_mux {
};

&ipu1_csi1_mux_from_parallel_sensor {
	remote-endpoint = <&adv7280_ep>;
};

&uart1 { status = "okay"; }; /* default full feature uart */

/* external mmc card */
&usdhc1 { status = "okay"; };

/* Board specific io muxing */
&iomuxc {
	pinctrl_adv7280: gpio-adv7280 {
		fsl,pins = <
			MX6QDL_PAD_EIM_D26__GPIO3_IO26	0x1b0b0 /* soDimm 71: CIF_D0/CIF_IRQn */
			MX6QDL_PAD_SD2_DAT0__GPIO1_IO15	0x0f058 /* soDimm 98: CIF_D1/CIF_nPDN */
		>;
	};

	pinctrl_gpio_leds: gpio-leds {
		fsl,pins = <
			MX6QDL_PAD_RGMII_RD1__GPIO6_IO27 0xf058 /* PU_22K interal RGMII_RD1 - nRESET OUT */
			MX6QDL_PAD_NANDF_D6__GPIO2_IO06	 0xf058 /* PU_22K soDimm 127: SLPZ@DS2484R   */
			MX6QDL_PAD_EIM_D18__GPIO3_IO18   0xf058 /* PU_22K soDimm 77,  GPIO4 */
			MX6QDL_PAD_SD4_DAT2__GPIO2_IO10  0xf058 /* PU_22K soDimm 30,  GPIO5 */
			MX6QDL_PAD_SD4_DAT3__GPIO2_IO11  0xf058 /* PU_22K soDomm 100, GPIO6 */
			MX6QDL_PAD_NANDF_D4__GPIO2_IO04  0xf058 /* PU_22K soDimm 102, GPIO7 */
			MX6QDL_PAD_SD4_DAT0__GPIO2_IO08  0xf058 /* PU_22K soDimm 104, GPIO8 */
			MX6QDL_PAD_NANDF_D1__GPIO2_IO01  0xf058 /* PU_22K soDimm 134, GPIO9 */
		>;
	};

	pinctrl_gpio_keys: gpiokeys {
		fsl,pins = <
			MX6QDL_PAD_EIM_A16__GPIO2_IO22		0x1b0b0	/* Power button */
			MX6QDL_PAD_SD2_CMD__GPIO1_IO11		0x1b0b0 /* soDimm69,  GPIO3 */
			MX6QDL_PAD_GPIO_8__GPIO1_IO08		0x1b0b0 /* soDimm63,  GPIO2 */
		>;
	};

	pinctrl_pps_gpio: gpiopps {
		fsl,pins = <
			MX6QDL_PAD_GPIO_7__GPIO1_IO07		0x1b0b0 /* soDimm 55 */
		>;
	};
};
