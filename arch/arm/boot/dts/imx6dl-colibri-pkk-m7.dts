/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include "imx6dl.dtsi"
#include "imx6qdl-colibri-ravion.dtsi"

/ {
	model = "Toradex Colibri iMX6DL/S on Radioavionica CIMC Lite Board";
	compatible = "toradex,mcp", "toradex,colibri_imx6dl-eval",
		"toradex,colibri_imx6dl", "fsl,imx6dl";

	/*
	 * Device specific clocks
	 */
	clocks {
		clk_32k_bt: bt_clk {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <32768>;
			clock-accuracy = <100>;
		 };
	};

	/*
	 * Device specific regulators
	 */
	bt_vio_reg: bt_vio {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_reg_bt_cif>;
			compatible = "regulator-fixed";
			regulator-name = "VIO_BT";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <1800000>;
			gpio = <&gpio3 2 GPIO_ACTIVE_LOW>;
			regulator-always-on;
			vin-supply = <&reg_3p3v>;
	};

	/*
	 * Device specific leds
	 */
	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_leds>;

		nreset {
			label = "nRESET";
			gpios = <&gpio6 27 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		wifi_en {
			label = "wifi_enable";
			gpios = <&gpio3 14 GPIO_ACTIVE_HIGH>; /* SODIMM 122 */
			default-state = "off";
		};

		disp_en {
			label = "display_enable";
			gpios = <&gpio3 15 GPIO_ACTIVE_HIGH>; /* SODIMM 124 */
			default-state = "on";
		};

		scan_dir {
			label = "disp_scan_direction";
			gpios = <&gpio4 10 GPIO_ACTIVE_HIGH>; /* SODIMM 184 */
			default-state = "on";
		};

		ts_ckw {
			label = "ts_ckw";
			gpios = <&gpio4 11 GPIO_ACTIVE_HIGH>; /* SODIMM 186 */
			default-state = "off";
		};

		ts_sc {
			label = "ts_sc";
			gpios = <&gpio4 15 GPIO_ACTIVE_HIGH>; /* SODIMM 188 */
			default-state = "off";
		};
	};

	/*
	 * Device specific keys
	 */
	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_keys>;

		power {
			label = "Power";
			gpios = <&gpio2 22 GPIO_ACTIVE_LOW>; /* SODIMM 45 */
			linux,code = <KEY_POWER>;
			debounce-interval = <100>;
			wakeup-source;
		};

		hp_tangenta {
			label = "HP tangenta";
			gpios = <&gpio2 01 GPIO_ACTIVE_LOW>; /* SODIMM 134 */
			linux,code = <KEY_F1>;
			debounce-interval = <100>;
		};
	};

	/*
	 * LCD Panel
	 */
	panel {
		compatible = "mitsubishi,aa070me11ada11";
		backlight = <&backlight>;

		port {
			lcd_panel_in: endpoint {
				remote-endpoint = <&tft_display_bus_out>;
			};
		};
	};

	backlight: backlight {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_bl_on>;
		compatible = "pwm-backlight";
		enable-gpios = <&gpio3 04 GPIO_ACTIVE_LOW>;	/* soDimm 119 */
		pwms = <&pwm1 0 2000>; /* FixMe: frequency !!! */
		brightness-levels = <0 31 63 95 127 159 191 223 255>;
		default-brightness-level = <5>;
		status = "okay";
	};
};

/*
 * Display subsystem
 */
&tft_display_bus {
	interface-pix-fmt = "bgr666";
	status = "okay";
};

&tft_display_bus_out {
	remote-endpoint = <&lcd_panel_in>;
};


/*
 * Colibri I2C: I2C3_SDA/SCL on SODIMM 194/196 (e.g. RTC on carrier board)
 */
&i2c3 {
	status = "okay";

	i2c_bus_mux: mux@70 { /* I2C bus multiplexer/switch */
		status = "disabled";
		compatible = "nxp,pca9541";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x70>;

		i2c@1 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <1>;
			/* Texas Instruments SBS-compatible Fuel Gauge Controller */
			battery1: bq20z655@0b {
				status = "okay";
				compatible = "sbs,sbs-battery";
				reg = <0x0b>;
				sbs,i2c-retry-count = <2>;
				sbs,poll-retry-count = <1>;
			};
		};

		i2c@2 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <2>;
			/* Texas Instruments SBS-compatible Fuel Gauge Controller */
			battery2: bq20z655@ob {
				status = "okay";
				compatible = "sbs,sbs-battery";
				reg = <0x0b>;
				sbs,i2c-retry-count = <2>;
				sbs,poll-retry-count = <1>;
			};
		};
	};

	/* Texas Instruments SBS-compatible Fuel Gauge Controller */
	battery0: bq20z655@0b {
		status = "disabled";
		compatible = "sbs,sbs-battery";
		reg = <0x0b>;
		sbs,i2c-retry-count = <2>;
		sbs,poll-retry-count = <1>;
	};
};

/* Only pwm1 used as bright contol, all other - disabled  */
&pwm1 { status = "okay";	}; /* soDimm 28 - LCD bright */

/* uart1 - sys (3w), uart2 - bluetoth (H3), uart3 disabled by default */
&uart1 { status = "okay"; }; /* default full feature uart */
&uart2 { /* default have CTS/RTS pins */
	status = "okay";

	bluetooth {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_bluetooth>;

		enable-gpios	= <&gpio3 3 GPIO_ACTIVE_HIGH>;
		compatible	= "ti,wl1271-st";
		clocks		= <&clk_32k_bt 0>;
		clock-names	= "ext_clock";
		max-speed	= <3686400>;
		/*
		 * Params not found in source, but described in documentation
		 */
		current-speed	= <115200>;
		vio-supply	= <&bt_vio_reg>;
		vbat-supply	= <&reg_3p3v>;
		status = "okay";
	};
};
&uart3 { status = "okay"; }; /* default 3-wire uart */

/* external mmc card */
&usdhc1 { status = "okay"; };

/* Board specific io muxing */
&iomuxc {
	pinctrl_gpio_bl_on: gpioblon {
		fsl,pins = <
			MX6QDL_PAD_EIM_DA4__GPIO3_IO04	0x1b0b0 /* soDimm 119 */
		>;
	};

	pinctrl_bluetooth: gpio-bluetooth {
		fsl,pins = <
			MX6QDL_PAD_EIM_DA3__GPIO3_IO03	0x0f058 /* PU_22K soDimm 117 - nBT_PDN */
		>;
	};

	pinctrl_reg_bt_cif: gpio-reg-bt-cif {
		fsl,pins = <
			MX6QDL_PAD_EIM_DA2__GPIO3_IO02	0x0f058 /* PU_22K soDimm 115: CIF_BT_PWR */
		>;
	};

	pinctrl_gpio_leds: gpio-leds {
		fsl,pins = <
			MX6QDL_PAD_RGMII_RD1__GPIO6_IO27 0xf058 /* PU_22K interal RGMII_RD1 - nRESET OUT */
			MX6QDL_PAD_EIM_DA14__GPIO3_IO14  0xf058 /* PU_22K - soDimm 122. DISP EN */
			MX6QDL_PAD_EIM_DA15__GPIO3_IO15  0xf058 /* PU_22K - soDimm 124. DISP EN */
			MX6QDL_PAD_KEY_COL2__GPIO4_IO10  0xf058 /* PU_22K - soDimm 184. DISP SD */
			MX6QDL_PAD_KEY_ROW2__GPIO4_IO11  0xf058 /* PU_22K - soDimm 186. TS CKW */
			MX6QDL_PAD_KEY_ROW4__GPIO4_IO15	 0xf058 /* PU_22K - soDimm 188. TS_SC */
		>;
	};

	pinctrl_gpio_keys: gpiokeys {
		fsl,pins = <
			MX6QDL_PAD_EIM_A16__GPIO2_IO22		0x1b0b0	/* Power button */
			MX6QDL_PAD_NANDF_D1__GPIO2_IO01		0x1b0b0 /* Tangenta soDimm 134 */
		>;
	};
};
